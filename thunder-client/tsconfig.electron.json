{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],
    "outDir": "electron-dist",
    "rootDir": "electron",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],

    // >>> IMPORTANT : on force l'Ã©mission des .js
    "noEmit": false,
    "declaration": false,
    "emitDeclarationOnly": false,
    "sourceMap": false
  },
  "include": ["electron/**/*.ts"]
}
